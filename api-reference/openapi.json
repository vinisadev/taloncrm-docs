                      }
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "Get all organizations",
        "tags": [
          "Organizations"
        ]
      }
    },
    "/organizations/{id}": {
      "get": {
        "description": "Retrieves a specific organization by its ID with metadata.",
        "operationId": "OrganizationsController_getOrganizationById",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Organization ID",
            "schema": {
              "example": "org_123456789",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Organization retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Organization ID"
                    },
                    "name": {
                      "type": "string",
                      "description": "Organization name"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Creation timestamp"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Last update timestamp"
                    },
                    "userCount": {
                      "type": "number",
                      "description": "Number of users in the organization"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Organization not found"
          }
        },
        "summary": "Get organization by ID",
        "tags": [
          "Organizations"
        ]
      },
      "put": {
        "description": "Updates an existing organization information.",
        "operationId": "OrganizationsController_updateOrganization",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Organization ID",
            "schema": {
              "example": "org_123456789",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Organization update data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateOrganizationRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Organization updated successfully"
          },
          "404": {
            "description": "Organization not found"
          },
          "409": {
            "description": "Organization with this name already exists"
          }
        },
        "summary": "Update organization",
        "tags": [
          "Organizations"
        ]
      },
      "delete": {
        "description": "Deletes an organization. The organization must not have any users.",
        "operationId": "OrganizationsController_deleteOrganization",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Organization ID",
            "schema": {
              "example": "org_123456789",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Organization deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Organization deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Organization not found"
          },
          "409": {
            "description": "Cannot delete organization with existing users"
          }
        },
        "summary": "Delete organization",
        "tags": [
          "Organizations"
        ]
      }
    }
