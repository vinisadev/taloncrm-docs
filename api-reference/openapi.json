{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "description": "Returns the current health status of the API server including uptime and timestamp",
        "operationId": "AppController_getHealthCheck",
        "parameters": [],
        "responses": {
          "200": {
            "description": "API is healthy and running",
